<!-- Container for the blog content -->
<div class="text">
	<!-- Container for the blog header -->
	<div class="container blog">
		<!-- Header row with title and author information -->
		<div class="row header">
			<!-- Empty column to align the title -->
			<div class="col-8"></div>
			<!-- Blog title -->
			<h2 class="blogTitle">{{title}}</h2>
		</div>
		<!-- Author and date information -->
		<div class="col-4">
			<p class="blogCreate">Posted by {{user.username}} on {{format_date date_created}}</p>
		</div>
	</div>
	<!-- Blog description -->
	<p class="blogDescriptionpt2">{{description}}</p>
</div>

<!-- Conditional rendering for logged-in users -->
{{#if logged_in}}
<!-- Form for adding new comments -->
<form class="new-comment-form" data-blogid={{id}}>
	<div class="textAreaCont p-2">
		<!-- Textarea for entering comments -->
		<textarea id='comment_description' name="comment-body" placeholder="Enter your comment - " cols="30"
			rows="2"></textarea>
	</div>
	<div class="btnComment p-2">
		<!-- Button to submit a new comment -->
		<button class="button btn btn-success" type="submit">Add Comment</button>
	</div>
</form>

{{/if}}
<!-- Section for displaying comments -->
<h2 class="text-center">Comments</h2>
{{#each comments as |comment|}}
<!-- Individual comment container -->
<div class="commentCont">
	<!-- Displaying comment text comment owner and date created-->
	<p class="text-center commentText">{{comment.comment_description}}</p>
	<p class="text-center commentOwner">Created by {{comment.user.username}} on {{format_date date_created}}</p>
</div>
{{/each}}

<script src="/js/comments.js"></script>