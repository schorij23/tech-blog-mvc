<div class="container">
    <div class="row">
        <div class="col-8">
    <h2> Your Dashboard - {{username}}</h2>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <form class="form blog-form">
            <div class="mb-3">
            <input type="text" class="form-control" id="blog-title" placeholder="Blog Name" />
            </div>

            <div class="mb-3">
            <textarea class="form-control" id="blog-content"  name="blog-content" placeholder="Blog Content"></textarea>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Post A Blog</button>
            </div>
        </form>
    </div>
</div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Current Blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>